{
  "name": "webextensions-api-mock",
  "version": "1.0.0",
  "description": "WebExtensions API as sinon stubs",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoically/webextensions-api-mock.git"
  },
  "bin": {
    "webextensions-api-mock": "dist/bin.js"
  },
  "scripts": {
    "build": "npm-run-all lint test build:*",
    "build:tsc": "tsc -p tsconfig.build.json",
    "build:copy": "copyup \"src/generated/*\" dist",
    "generate": "ts-node src/bin.ts",
    "watch": "tsc --watch",
    "lint": "eslint '{src,test}'/**/*.ts",
    "test": "ts-mocha",
    "test:watch": "ts-mocha --watch"
  },
  "keywords": [
    "webextensions",
    "schemas"
  ],
  "author": "stoically <stoically@protonmail.com>",
  "homepage": "https://github.com/stoically/webextensions-api-mock",
  "bugs": {
    "url": "https://github.com/stoically/webextensions-api-mock/issues"
  },
  "license": "MPL-2.0",
  "files": [
    "dist",
    "tsconfig.json",
    "tsconfig.build.json"
  ],
  "types": "dist",
  "dependencies": {
    "prettier": "^1.19.1",
    "webextensions-schema": "^0.5.0"
  },
  "peerDependencies": {
    "sinon": "^7.5.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.11",
    "@types/prettier": "^1.18.4",
    "@types/sinon": "^7.5.1",
    "@types/sinon-chai": "^3.2.3",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "chai": "^4.2.0",
    "copyfiles": "^2.1.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "mocha": "^6.2.2",
    "npm-run-all": "^4.1.5",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "ts-mocha": "^6.0.0",
    "typescript": "^3.7.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": true
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
